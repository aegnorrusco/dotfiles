# vim:set filetype=dosini:

theme = solarized_dark.theme
prompt_suffix = ": "
search_threads_sort_order = newest_first
editor_cmd = vim -f -c 'set filetype=mail' -c 'setlocal textwidth=80' +/^$ +noh
prefer_plaintext = 1

[bindings]

[[thread]]
j = move next
k = move previous

[accounts]

