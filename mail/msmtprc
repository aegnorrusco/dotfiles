# Default values
defaults
auth            on
tls             on
tls_trust_file  /etc/ssl/certs/ca-bundle.crt
logfile         ~/.msmtp.log

# Gmail
account         gmail
host            smtp.gmail.com
port            587
from            khardix@gmail.com
user            khardix
passwordeval    "gpg2 --quiet --for-your-eyes-only --decrypt ~/system/mail/.secrets/gmail.gpg"

# Default account
account default : gmail
